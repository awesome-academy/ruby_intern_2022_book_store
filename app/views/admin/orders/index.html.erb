<% provide :title, t(".title") %>
<h1 class="h3 mb-2 text-gray-800">
  <%= t ".order_management" %>
</h1>
<div class="filter">
  <%= search_form_for @q, url: admin_orders_path, class: "search_form" do |f| %>
    <div>
      <%= f.label t("customer_name") %>
      <%= f.search_field :user_name_cont, class: "form-control" %>
    </div>
    <div>
      <%= f.label t("by_date") %>
      <%= f.date_field :created_at_date_equals, class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= f.label t("status") %>
      <%= f.select :status_eq, Order.statuses, include_blank: t(".all"), class: "form-control" %>
    </div>
    <div class="col-md-2">
      <%= submit_tag t("filter"), {class: "btn btn-primary"} %>
    </div>
  <% end %>
</div>
<div class="card shadow mb-4">
  <div class="card-body">
    <div class="table-responsive table-striped">
      <table class=" table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr class="table-info">
            <th><%= t "index" %></th>
            <th><%= t "order_id" %></th>
            <th><%= t "customer_info" %></th>
            <th><%= t "description" %></th>
            <th><%= t "order_create_at" %></th>
            <th><%= t "order_detail" %></th>
            <th><%= t "status" %></th>
          </tr>
        </thead>
        <tbody>
          <%== pagy_bootstrap_nav(@pagy) %>
          <% @orders.each.with_index(@pagy.offset + 1) do |order, index| %>
            <%= render partial: "order", locals: {order: order, index: index} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div id="order-content"></div>
