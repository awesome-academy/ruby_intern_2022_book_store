<div class="modal fade" id="order-modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">
          <%= t ".order_detail" %>:
          #<%= order.id %>
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render partial: "customer_info",
                 locals: {customer: order.address} %>
        <div class="table-responsive table-striped">
          <table class=" table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
            <thead>
              <tr class="table-info">
                <th><%= t ".book_id" %></th>
                <th><%= t "book_name" %></th>
                <th><%= t "book_edition" %></th>
                <th><%= t "unit_price" %></th>
                <th><%= t "quantity" %></th>
                <th><%= t "total_order_detail" %></th>
              </tr>
            </thead>
            <tbody>
              <%= render partial: "description", collection: order.order_details,
                                            as: :od %>
              <tr class="table-warning">
                <td colspan="5">
                  <%= t "discount" %>
                </td>
                <td>
                  <%= discount_percent(order.discount) %> %
                </td>
              </tr>
              <tr class="table-warning">
                <td colspan="5">
                  <%= t "total_order" %>
                </td>
                <td>
                  <%= number_to_currency(Order.convert_vnd(
                                          total(order.order_details),
                                          params[:locale]))%>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
